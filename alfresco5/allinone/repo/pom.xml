            <type>amp</type>
        </dependency>

        <dependency>
            <groupId>com.hcl.ecm</groupId>
            <artifactId>custom-link-repo</artifactId>
            <version>5.0.1.1.5.0.0</version>
            <type>amp</type>
        </dependency>


        <dependency>
            <groupId>com.hcl.ecm</groupId>
            <artifactId>custom-lifecycle-repo</artifactId>
            <version>5.0.1.1.3.3.3-SNAPSHOT</version>
            <type>amp</type>
        </dependency>

        <!--<dependency>-->
            <!--<groupId>com.hcl.ecm</groupId>-->
            <!--<artifactId>global-traffic-manager-repo</artifactId>-->
            <!--<version>5.0.1.1.0.0</version>-->
            <!--<type>amp</type>-->
        <!--</dependency>-->


        <dependency>
            <groupId>com.hcl.ecm</groupId>
            <artifactId>pearson-subscription-master-repo</artifactId>
            <version>5.0.1.1.5.0.0</version>
            <type>amp</type>
        </dependency>

        <dependency>
            <groupId>com.hcl.ecm</groupId>
            <artifactId>pearson-wip-repo</artifactId>
            <version>5.0.1.1.5.0.0</version>
            <type>amp</type>
        </dependency>


        <dependency>
            <groupId>com.hcl.ecm</groupId>
            <artifactId>custom-group-repo</artifactId>
            <version>5.0.1.1.3.2.1</version>
