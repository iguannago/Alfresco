            <type>amp</type>
        </dependency>
        -->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <!--  Here is can control the order of overlay of your (WAR, AMP, etc.) dependencies
                        | NOTE: At least one WAR dependency must be uncompressed first
                        | NOTE: In order to have a dependency effectively added to the WAR you need to
                        | explicitly mention it in the overlay section.
                        | NOTE: First-win resource strategy is used by the WAR plugin
                         -->
                    <overlays>
                        <!-- Current project customizations. This is normally empty, since customizations come from the AMPs -->
                        <overlay/>
                        <!-- The Alfresco WAR -->
                        <overlay>
                            <groupId>${alfresco.groupId}</groupId>
                            <artifactId>${alfresco.repo.artifactId}</artifactId>
                            <type>war</type>
                            <!-- To allow inclusion of META-INF -->
                            <!--To allow inclusion of META-INF -->
                            <excludes>
                                <!--web.xml has been updated after original alfresco.war was exploded
                                    so skip it -->
                                <exclude>WEB-INF/web.xml</exclude>
                            </excludes>
                        </overlay>

                        <!--  Alfresco Transformation Server AMP -->

                        <overlay>
                            <groupId>org.alfresco.transformationserver</groupId>
                            <artifactId>alfresco-transformationserver-repo</artifactId>
                            <type>amp</type>
                        </overlay>


                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>alfresco-unzip_repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>bulk-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-site-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>save-search-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.pearson.ecm</groupId>
                            <artifactId>base-model-repo</artifactId>
                            <type>amp</type>
                        </overlay>
                        <overlay>
                            <groupId>com.pearson.ecm</groupId>
                            <artifactId>legacy-model-repo</artifactId>
                            <type>amp</type>
                        </overlay>


                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-relationships-repo</artifactId>
                            <type>amp</type>
                        </overlay>
                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-link-repo</artifactId>
                            <type>amp</type>
                        </overlay>


                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-lifecycle-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <!--<overlay>-->
                            <!--<groupId>com.hcl.ecm</groupId>-->
                            <!--<artifactId>global-traffic-manager-repo</artifactId>-->
                            <!--<type>amp</type>-->
                        <!--</overlay>-->


                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>pearson-subscription-master-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>pearson-wip-repo</artifactId>
                            <type>amp</type>
                        </overlay>

                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-group-repo</artifactId>
                            <type>amp</type>
                        </overlay>
                        <overlay>
                            <groupId>com.hcl.ecm</groupId>
                            <artifactId>custom-workflow-repo</artifactId>
                            <type>amp</type>
                        </overlay>
                        <!--Note that JAR dependencies are automatically added and does not
                            need to be specified here, unless you need them applied in a specific order -->
                    </overlays>
                    <!--  Overwriting  web.xml file with custom web.xml file.-->
                    <webResources>
                        <resource>
                            <filtering>true</filtering>
                            <directory>src/main/webapp</directory>
                            <includes>
                                <include>**/web.xml</include>
                            </includes>
                        </resource>
                    </webResources>
                    <warSourceDirectory>src/main/webapp</warSourceDirectory>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <packagingExcludes>WEB-INF/lib/cors-filter-1.5.jar,WEB-INF/lib/java-property-utils-1.6.jar</packagingExcludes>

                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- Overrides the run profile to disable securecomms and add rapid development configuration -->
        <profile>
            <id>run</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-war-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>prepare-exploded-war</id>
                                <goals>
                                    <goal>exploded</goal>
                                </goals>
                                <phase>prepare-package</phase>
                            </execution>
                            <execution>
                                <id>default-war</id>
                                <configuration>
                                    <webXml>${project.build.directory}/${project.build.finalName}-nossl/WEB-INF/web.xml</webXml>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Replaces web.xml where applicable, commenting out the security-constraints -->
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <executions>
                            <execution>
                                <id>disable-securecomms</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <ignoreErrors>true</ignoreErrors>
                            <file>${project.build.directory}/${project.build.finalName}/WEB-INF/web.xml</file>
                            <outputDir>${project.build.directory}/${project.build.finalName}-nossl/WEB-INF/</outputDir>
                            <preserveDir>false</preserveDir>
                            <replacements>
                                <replacement>
                                    <token><![CDATA[<!-- Toggle securecomms placeholder start -->]]></token>
                                    <value><![CDATA[<!--]]></value>
                                </replacement>
                                <replacement>
                                    <token><![CDATA[<!-- Toggle securecomms placeholder end -->]]></token>
                                    <value><![CDATA[-->]]></value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <dependencies>
                <dependency>
                    <groupId>org.alfresco.maven</groupId>
                    <artifactId>alfresco-rad</artifactId>
                    <version>${maven.alfresco.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
